<?xml version="1.0" encoding="utf-8"?>

<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bt_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_vertical" />

        <Button
            android:id="@+id/bt_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_horizontal" />

        <Button
            android:id="@+id/bt_grid"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_grid" />

    </LinearLayout>

</android.widget.FrameLayout>
